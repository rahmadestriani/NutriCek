<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@drawable/background"
    android:scaleType="fitCenter">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:ignore="MissingConstraints"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/img_main"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/ic_default_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_titleMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:stretchColumns="1">

                <TableRow android:background="#aa8976">
                    <TextView
                        android:text="NUTRITION"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"/>
                </TableRow>

                <View
                    android:layout_height="3dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Energy"/>

                    <TextView
                        android:layout_column="1"
                        android:id="@+id/energy"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>

                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Protein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_column="1"
                        android:id="@+id/protein"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Fats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_column="1"
                        android:id="@+id/fats"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Carbohydrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_column="1"
                        android:id="@+id/carbohydrate"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Vitamin A"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:fontFamily="@font/montserrat"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/VitA"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Vitamin B1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/VitB1"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>


                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

                <TableRow android:background="#f0e2d0">
                    <TextView
                        android:text="Vitamin C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"/>
                    <TextView
                        android:layout_column="1"
                        android:id="@+id/VitC"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:paddingRight="10dp"
                        android:text="-"
                        android:gravity="center"/>
                </TableRow>

                <View
                    android:layout_height="1dip"
                    android:background="@color/black" />

            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#aa8976"
            android:clickable="true"
            android:contentDescription="@string/addbutton"
            android:focusable="true"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add"
            app:rippleColor="@color/white"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:backgroundTint="#f0e2d0"
            android:contentDescription="@string/fabcamera"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/add_btn"
            app:layout_constraintEnd_toEndOf="@+id/add_btn"
            app:layout_constraintStart_toStartOf="@+id/add_btn"
            app:srcCompat="@drawable/ic_camera" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:backgroundTint="#f0e2d0"
            android:contentDescription="@string/fabupload"
            android:focusable="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/fab_camera"
            app:layout_constraintEnd_toEndOf="@+id/fab_camera"
            app:layout_constraintStart_toStartOf="@+id/fab_camera"
            app:srcCompat="@drawable/ic_uploaddrive" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:contentDescription="@string/fabsearch"
            android:focusable="true"
            android:visibility="invisible"
            android:backgroundTint="#f0e2d0"
            app:layout_constraintBottom_toTopOf="@id/fab_upload"
            app:layout_constraintEnd_toEndOf="@id/fab_upload"
            app:layout_constraintStart_toStartOf="@id/fab_upload"
            app:srcCompat="@drawable/ic_searhc" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>